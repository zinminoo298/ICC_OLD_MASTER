<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFilterSearch"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#add8e6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="CUST:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="PROD:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="C:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:text="S:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:text="DATE:"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#70add8e6">

        <TextView
            android:id="@+id/txt_cust"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:singleLine="true"
            android:text="0002"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/txt_prod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:singleLine="true"
            android:text="AIL000"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/txt_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:singleLine="true"
            android:text="001"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/txt_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            android:singleLine="true"
            android:text="F314"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"/>
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:singleLine="true"
            android:text="19/04/21"/>

    </LinearLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        >
        <View
            android:layout_width="506dp"
            android:layout_height="1dp"
            android:background="#40000000"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:background="#add8e6">

            <TextView
                android:id="@+id/view_sh"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.2"
                android:padding="5dp"
                android:textColor="#000000"
                android:singleLine="true"
                android:gravity="center|left"
                android:text="Location" />
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.005"
                android:background="#40000000"/>

            <TextView
                android:id="@+id/view_bc"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:padding="5dp"
                android:textColor="#000000"
                android:singleLine="true"
                android:gravity="center|left"
                android:text="Barcode" />
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.005"
                android:background="#40000000"/>
            <TextView
                android:id="@+id/view_qty"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.24"
                android:padding="5dp"
                android:textColor="#000000"
                android:singleLine="true"
                android:gravity="center|left"
                android:text="Quantity"/>
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.005"
                android:background="#40000000"/>
            <TextView
                android:id="@+id/view_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.24"
                android:padding="5dp"
                android:textColor="#000000"
                android:singleLine="true"
                android:gravity="center|left"
                android:text="Price"/>


        </LinearLayout>

        <View
            android:layout_width="506dp"
            android:layout_height="1dp"
            android:background="#40000000"
            android:layout_below="@+id/linearLayout"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_above="@id/id">
        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text=""
            android:textColor="#ff0000"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</LinearLayout>